        .panel-header

          padding-top 15px
          padding-bottom 15px

          &.mat-expansion-panel-header.mat-expanded:hover
          &.mat-expansion-panel-header.mat-expanded:focus
            background rgba(0, 0, 0, 0.04)

          .panel-header-title
            min-width 120px
            display: flex;
            align-items: center;
            justify-content: left;
            flex-grow: 0;

            div
              text-align center
              width 125px

          .panel-header-description
            margin-right 190px
            //display flex
            flex-direction row
            min-width 0

            .pizza-price
              color #fff
              min-width 200px
              position absolute
              top 50%
              transform translateY(-50%)
              right 0
              font-size 18px

            //@media only screen and (max-width: 600px)
            //  .pizza-elements-list
            //    display none !important

            .pizza-elements-list
              @media only screen and (max-width: 865px)
                display none !important
              display flex
              //flex-direction row
              overflow hidden
              min-width: 0;

              .pizza-element
                border-radius 30px

                //padding 3px
                margin: 5px

                &.hidden
                  display none

                &.active
                  //background-color #a9d560 //green background
                  //box-shadow: inset 0 0 5px 5px rgba(255,255,255,1);

                  .pizza-icon
                    background-position 0 -45px !important
                    background-size 45px auto !important

                &:hover
                  background-color rgba(226, 226, 226, 0.5) //green background
                  //box-shadow: 0 0 5px 5px rgba(255,255,255,1);
                  box-shadow: 0 0 8px 0 #e2e2e2;

                .pizza-icon
                  width 45px
                  height 45px

                  &.ananas
                    background url("../../assets/icons/pizza/ananas.png") no-repeat

