        .panel-body
          display flex
          justify-content space-between
          @media only screen and (max-width: 865px)
            flex-wrap wrap


          .pizza-description
            color #fff
            padding-top 20px
            font-size 20px
            line-height 25px
            min-width 440px
            padding-right 10px
            @media only screen and (max-width: 620px)
              min-width 240px

          .pizza-image
            .pizza-image-shadow
              position: relative;
              max-width: 100%;
              float: left;
            .pizza-image-shadow::before
              border-radius 10px
              content: "";
              position: absolute;
              top: 0;
              bottom: 0;
              left: 0;
              right: 0;
              box-shadow: inset 0 0 8px rgba(0,0,0,0.5);

            img
              border-radius 10px
              width 300px
              height 100%
              float: left;
