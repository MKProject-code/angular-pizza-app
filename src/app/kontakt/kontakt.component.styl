::ng-deep .mat-card-header-text
  margin 0 !important
  text-align center !important
  width 100% !important

section
  .section-body
    margin-top 30px
    display flex
    flex-wrap wrap
    justify-content center

    .map-card
      //TODO
      min-width 200px
      width 100%
      max-width 600px

      .map-subtitle
        color #d6d6d6
        font-style italic
        font-family Calibri
        font-size 18px
        margin-top 1px
        height 18px

      .map-image

        .map-image-shadow
          position: relative;
          float: left;
          width 100%

          iframe
            border-radius 10px
            float: left
            width: 100%;

        .map-image-shadow::before
          border-radius 10px
          content: "";
          position: absolute;
          top: 0;
          bottom: 0;
          left: 0;
          right: 0;
          box-shadow: inset 0 0 8px rgba(0, 0, 0, 0.5);
          pointer-events none

