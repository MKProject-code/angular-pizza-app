@require '../../functions.styl'

header
  width 100%
  height 400px
  display flex
  flex-wrap nowrap
  flex-direction column
  justify-content flex-end
  background-color rgba(0, 0, 0, 0.8)
  box-shadow: 0 40px 40px -40px #000000;

  &.promocje
    background url("../../assets/background-promocje.jpg") no-repeat
    background-size 100%
    background-position: top
    @media only screen and (max-width: 900px)
      background-size 120%
    @media only screen and (max-width: 750px)
      background-size 160%
    @media only screen and (max-width: 550px)
      background-size 180%

  &.pizza
    background url("../../assets/background-pizza.jpg") no-repeat
    background-size 100%
    background-position: top
    @media only screen and (max-width: 900px)
      background-size 120%
    @media only screen and (max-width: 750px)
      background-size 160%
    @media only screen and (max-width: 550px)
      background-size 180%

  &.burgery
    background url("../../assets/background-burger.jpg") no-repeat
    background-position 0 -520px
    background-size 100%
    @media only screen and (max-width: 1500px)
      background-position 0 -500px
    @media only screen and (max-width: 1430px)
      background-position 0 -480px
    @media only screen and (max-width: 1380px)
      background-position 0 -450px
    @media only screen and (max-width: 1300px)
      background-position 0 -420px
    @media only screen and (max-width: 1210px)
      background-position 0 -380px
    @media only screen and (max-width: 1180px)
      background-position 0 -350px
    @media only screen and (max-width: 1140px)
      background-position 0 -300px
    @media only screen and (max-width: 1060px)
      background-position 0 -250px
    @media only screen and (max-width: 980px)
      background-position 0 -230px
    @media only screen and (max-width: 950px)
      background-position 0 -200px
    @media only screen and (max-width: 910px)
      background-position 0 -180px
    @media only screen and (max-width: 880px)
      background-position 0 -150px
    @media only screen and (max-width: 830px)
      background-position 0 -200px
      background-size 120%
    @media only screen and (max-width: 760px)
      background-position 0 -180px
    @media only screen and (max-width: 730px)
      background-position 0 -150px
    @media only screen and (max-width: 700px)
      background-position 0 -120px
    @media only screen and (max-width: 660px)
      background-position 0 -100px
    @media only screen and (max-width: 630px)
      background-position 0 -180px
      background-size 140%
    @media only screen and (max-width: 620px)
      background-position 0 -150px
    @media only screen and (max-width: 595px)
      background-position 0 -130px
    @media only screen and (max-width: 570px)
      background-position 0 -100px
    @media only screen and (max-width: 540px)
      background-position 0 -140px
      background-size 160%
    @media only screen and (max-width: 510px)
      background-position 0 -120px
    @media only screen and (max-width: 490px)
      background-position 0 -100px

  &.napoje
    background url("../../assets/background-napoje.jpg") no-repeat
    background-position 0 -440px
    background-size 100%
    @media only screen and (max-width: 1400px)
      background-position 0 -340px
    @media only screen and (max-width: 1230px)
      background-position 0 -280px
    @media only screen and (max-width: 1150px)
      background-position 0 -250px
    @media only screen and (max-width: 1100px)
      background-position 0 -200px
    @media only screen and (max-width: 1000px)
      background-position 0 -170px
    @media only screen and (max-width: 930px)
      background-position 0 -150px
    @media only screen and (max-width: 870px)
      background-position 0 -120px
    @media only screen and (max-width: 820px)
      background-position 0 -90px
    @media only screen and (max-width: 750px)
      background-position 0 -50px
    @media only screen and (max-width: 690px)
      background-position 0 0
    @media only screen and (max-width: 610px)
      background-position 0 -60px
      background-size 120%
    @media only screen and (max-width: 580px)
      background-position -30px -80px
      background-size 140%
    @media only screen and (max-width: 520px)
      background-position -30px -30px
    @media only screen and (max-width: 470px)
      background-position -30px 0
    @media only screen and (max-width: 440px)
      background-position -30px 0
      background-size 150%

  &.kontakt
    background url("../../assets/background-kontakt.jpg") no-repeat
    background-position 0 -300px
    background-size 100%
    @media only screen and (max-width: 1300px)
      background-position 0 -250px
    @media only screen and (max-width: 1100px)
      background-position 0 -200px
    @media only screen and (max-width: 970px)
      background-position 0 -170px
    @media only screen and (max-width: 860px)
      background-position 0 -140px
    @media only screen and (max-width: 820px)
      background-position 0 -100px
    @media only screen and (max-width: 760px)
      background-position 0 -50px
    @media only screen and (max-width: 680px)
      background-position 0 0
    @media only screen and (max-width: 605px)
      background-position -50px 0
      background-size 120%
    @media only screen and (max-width: 510px)
      background-position -100px 0
      background-size 140%

  //&.napoje
  //&.kontakt

  //-webkit-box-shadow: 0px 63px 98px -69px rgba(0,0,0,0.75);
  //-moz-box-shadow: 0px 63px 98px -69px rgba(0,0,0,0.75);
  //box-shadow: 0px 63px 98px -69px rgba(0,0,0,0.75);

  .header-container
    display flex
    flex-wrap nowrap
    justify-content space-between
    width 100%
    margin-bottom 50px

    @media only screen and (max-width: 1140px)
      justify-content center

    .container-logo
      margin-top 50px
      margin-left 50px
      font-family TheBully
      font-size 180px
      color #be1600
      -webkit-text-stroke-width: 1px;
      -webkit-text-stroke-color: rgba(0, 0, 0, 0.4);
      text-shadow: 2px 2px 5px rgba(155, 100, 100, 0.8);
      opacity 0.9

      @media only screen and (max-width: 1450px)
        font-size 130px
      @media only screen and (max-width: 1250px)
        font-size 100px
      @media only screen and (max-width: 1140px)
        font-size 100px
      @media only screen and (max-width: 1140px)
        display none

    .container-item
      text-shadow 0 0 2px rgba(0, 0, 0, 1)
      margin-right 80px
      background-color rgba(0, 0, 0, 0.45)
      padding 5px 20px
      box-shadow 0 0 20px 20px rgba(0, 0, 0, 0.45);
      border-radius 5px

      @media only screen and (max-width: 1140px)
        margin-right 0

      .title
        font-weight bold

      //line-height 20px

      .phone
        //line-height 20px
      .open
        font-weight bold
        font-style italic
        color #fff1b4
        font-size 27px
        margin-top 20px

        @media only screen and (max-width: 540px)
          font-size 20px

      p
        font-size 25px
        color #ffffff
        font-family VictoriaSerif
        text-align center

  nav

    display flex
    flex-wrap nowrap
    justify-content center

    //box-shadow: 0px -9px 20px -10px rgba(255,0,0,0.75);
    box-shadow: 0px -9px 20px -10px rgba(0, 0, 0, 0.75);

    background-color rgba(0, 0, 0, 0.5);

    .nav-button
      width 170px
      height 70px
      font-size 20px
      font-family MeriendaOne-Regular

      text-transform: uppercase
      border-radius 0
      color #fff
      //background-color rgba(200, 0, 0, 0.5);
      background-color rgba(0, 0, 0, 0.0);
      transition 0.2s

      @media only screen and (max-width: 865px)
        width 140px
        font-size 18px
        padding 0
        margin 0
      @media only screen and (max-width: 700px)
        width 120px
        font-size 16px
      @media only screen and (max-width: 600px)
        width 100px
        font-size 14px
        height 60px
      @media only screen and (max-width: 500px)
        width 80px
        font-size 13px
        height 50px

      &:hover
        transition 0.3s
        background-color rgba(200, 0, 0, 0.4);

      &.router-link-active
        transition 0.3s
        background-color rgba(200, 0, 0, 0.6);

      .mat-button-wrapper
        color red



